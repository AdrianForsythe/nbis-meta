rule assembly_done:
    input:
        opj(config["report_path"],"assemblies_report.html"),
        opj(config["report_path"],"assembly_stats.txt"),
        opj(config["report_path"],"assembly_stats.pdf"),
        opj(config["report_path"],"alignment_rate.pdf")
    output:
        temp(touch(opj(config["results_path"],"progress","assembly.done")))
