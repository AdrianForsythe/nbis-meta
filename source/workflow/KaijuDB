kaiju_dbfiles = []
kaiju_dbfiles.append(opj(config["classifier_db_path"],"kaiju","kaiju_{}.fmi".format(config["diamond_dbtype"])))
kaiju_dbfiles.append(opj(config["taxdb"],"nodes.dmp"))
kaiju_dbfiles.append(opj(config["taxdb"],"names.dmp"))

include: "../rules/Classify/prepare_kaiju.rules"

rule kaiju_db_done:
    input:
        kaiju_dbfiles
    output:
        temp(touch(opj(config["results_path"],"progress","kaiju_db.done")))