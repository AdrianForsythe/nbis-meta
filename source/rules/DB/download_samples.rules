localrules:
    download_sample

rule download_sample:
    output:
        "data/{sample}_1.fastq.gz",
        "data/{sample}_2.fastq.gz"
    shell:
        """
        fastq-dump --split-3 {wildcards.sample} -O $TMPDIR
        gzip $TMPDIR/{wildcards.sample}_*.fastq
        mv $TMPDIR/{wildcards.sample}_*.fastq.gz data/
        """